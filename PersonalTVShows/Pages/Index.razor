@page "/"
@page "/Tvshows"

@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@inject IWebAssemblyHostEnvironment HostEnvironment


<PageTitle>My Personal Tv Shows </PageTitle>

<MudText Typo="Typo.h3">My Personal
    <MudLink Href="@($"{BaseLink}tvshowList")" Typo="Typo.h3" Color="Color.Inherit">Tv Shows</MudLink>
</MudText>

<MudText Typo="Typo.body1">This simple Blazor Wasm website is implemented using
    <MudLink Href="https://mudblazor.com/" Target="_blank" Color="Color.Inherit" Underline="Underline.Always">MudBlazor Framework</MudLink>.
    And the <MudLink Href="https://api.tvmaze.com" Target="_blank" Color="Color.Inherit" Underline="Underline.Always">TvMaze API</MudLink>.
</MudText>

<MudText Typo="Typo.body1"> The intention of this website is to keep track of the shows I liked, to know the previous and the next episodes
so I can watch it right away.</MudText>


@code{
    private String Env { get; set; }
    private String BaseLink { get; set; }

    protected override void OnInitialized()
    {
        Env = HostEnvironment.Environment;

        if (Env == "Production")
        {
            BaseLink = "/TvShows/";
        }
        else if (Env == "Development")
        {
            BaseLink = "/";
        }
    }
}